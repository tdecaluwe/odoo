<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_attribution_single_valued_view_tree" model="ir.ui.view">
        <field name="name">product.template.attribution.line.tree</field>
        <field name="model">product.template.attribution.line</field>
        <field name="arch" type="xml">
            <tree editable="top" create="0">
                <field name="attribute_id" invisible="1"/>
                <field name="product_template_id"/>
                <field name="attribute_value_id"/>
            </tree>
        </field>
    </record>
    <record id="product_template_attribution_multi_valued_view_tree" model="ir.ui.view">
        <field name="name">product.template.attribution.line.tree</field>
        <field name="model">product.template.attribution.line</field>
        <field name="inherit_id" ref="product_template_attribution_single_valued_view_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="attribute_value_id" position="replace">
                <field name="attribute_value_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
    <record id="product_template_attribution_line_view_kanban" model="ir.ui.view">
        <field name="name">product.template.attribution.line.kanban</field>
        <field name="model">product.template.attribution.line</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">attribute_value_id</attribute>
                <attribute name="group_edit">false</attribute>
                <attribute name="group_create">false</attribute>
                <attribute name="group_delete">false</attribute>
            </xpath>
        </field>
    </record>
</odoo>